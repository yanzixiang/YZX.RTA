<UserControl 
  x:Class="YZX.WINCC.Controls.GraduatorWPF"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:carousel3d="clr-namespace:Carousel3D;assembly=Common"
  mc:Ignorable="d" 
  d:DesignHeight="800" d:DesignWidth="800">
  <Border BorderBrush="Silver" BorderThickness="1" CornerRadius="5">
    <Border.Resources>
      <Style TargetType="{x:Type Button}">
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="5" />
        <EventSetter Event="Click" Handler="ItemClick"/>
      </Style>
    </Border.Resources>
    <carousel3d:Carousel3DPanel 
      x:Name="Graduator" 
      Background="White"
    />
  </Border>
</UserControl>
