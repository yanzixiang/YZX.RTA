<UserControl 
  x:Class="YZX.WINCC.Controls.FanWPF"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:pcp="clr-namespace:AITSW.PCPANEL.WPF;assembly=PCPANEL_WPF_Controls"
  mc:Ignorable="d" 
  d:DesignWidth="150"
  d:DesignHeight="200">
  <Grid>
    <pcp:Fan Design="Blower1">
      <pcp:Fan.Colors>
        <pcp:ControlColors>
          <pcp:ControlColors.State4Coloring>
            <pcp:ColoringColor ColorMode="Pulse" Color1="LightBlue" Color2="DarkBlue" Frequency="1" />
          </pcp:ControlColors.State4Coloring>
        </pcp:ControlColors>
      </pcp:Fan.Colors>
      <pcp:Fan.States>
        <pcp:StatesStandard Active="True" />
      </pcp:Fan.States>
    </pcp:Fan>
  </Grid>
</UserControl>
